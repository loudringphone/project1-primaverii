<%= form_for @country do |f| %>
    <%= f.label :name, "Name:", :required => true %>
    <%= f.text_field :name %>
    <br>
    <br>
    <%= f.label :official_name, "Official name:" %>
    <%= f.text_field :official_name %>
    <br>
    <br>
    <%= f.label :native_name, "Native official name:" %>
    <%= f.text_field :native_name %>
    <br>
    <br>
    <%= f.label :country_code, "Country code (CCA2):" %>
    <%= f.text_field :country_code %>
    <br>
    <br>
    <%= f.label :flag, "Flag:" %>
    <%= f.text_field :flag, placeholder: 'Type URL here..' %>
    <br>
    <br>
    <br>
    <%= f.submit %>

<% end %>