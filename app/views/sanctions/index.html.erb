<title>Sanction Index | Sancbook</title>

<h1>Sanctions Index</h1>
<p style='sanction number'>Currently <%= @sanctions.size %> sanctions on the list.</p>



    <% @nations.each do |nation| %>
        <h3 class="nation"><% unless Country.find_by(name: nation).nil?%>
    <a href="countries/<%= Country.find_by(name: nation).id %>"><img src="<%= Country.find_by(name: nation).flag %>" alt=""><%= nation %></a>
    <% else %><%= nation %><% end %></h3>
      <% sanctions = @sanctions.where(nationality: nation) %>
      <div class="sanction_index">
      <% sanctions.each do |sanction| %>
            <p>
                <a href="/sanctions/<%= sanction["id"] %>" data-turbolinks="false">
                    <%= sanction["name"] %>
                </a>
             </p>
      <% end %>
      </div>
    <% end %>


